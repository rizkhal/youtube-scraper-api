{
    "version": 2,
    "builds": [
        {
            "src": "dist/app.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "dist/app.js"
        }
    ],
    "crons": [
        {
            "path": "/api/run/videos",
            "schedule": "0 10 * * *"
        },
        {
            "path": "/api/run/channels",
            "schedule": "0 10 * * *"
        }
    ],
    "functions": {
        "api/*": {
            "runtime": "nodejs20.x",
            "memory": 1024,
            "maxDuration": 60,
            "includeFiles": [
                "node_modules/@sparticuz/chromium/**",
                "node_modules/puppeteer-core/**"
            ]
        }
    },
    "build": {
        "env": {
            "LD_LIBRARY_PATH": "/usr/lib64:/usr/lib:/lib/x86_64-linux-gnu:/usr/lib/x86_64-linux-gnu",
            "PATH": "/usr/bin:/bin:/usr/sbin:/sbin:/lib64:/lib"
        }
    }
}